function largestOfFour(arr) {
  // builds a new array of the largest numbers from each sub-array 
  let newArr = [], highestNumber;
  for (let subArr of arr) {
    /* assign the first number of the sub-array to the variable 
       if there are any numbers, else assign 0 to it 
    */    
    subArr.length == 0 ? highestNumber = 0 : highestNumber = subArr[0];
    for (let x of subArr) {
      /*  if there is any number in the sub-array higher than its' first
          number, assign it to the variable      */
      if (x > highestNumber) highestNumber = x;
    }
    newArr.push(highestNumber);
    highestNumber = 0
  }
  return newArr;
}

largestOfFour([[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]); // returns [5, 27, 39, 1001]
